{
  "name": "kb2midi",
  "version": "2.1.0",
  "description": "2.5 octave QWERTY keyboard MIDI controller",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "start": "npm run build && vite preview",
    "dev": "vite",
    "dev:electron": "ELECTRON=1 vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "serve": "npm run build && http-server -p 8080 -c-1 -o dist",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "electron-dev-production": "NODE_ENV=production electron .",
    "electron-serve": "npm run dev:electron & wait-on http://localhost:8080 && NODE_ENV=development electron .",
    "electron-serve-production": "npm run dev:electron & wait-on http://localhost:8080 && NODE_ENV=production electron .",
    "electron-serve-devtools": "OPEN_DEVTOOLS=1 npm run electron-serve",
    "electron-serve-quiet": "QUIET_LOGS=1 npm run electron-serve",
    "electron-preview": "npm run build && NODE_ENV=production electron .",
    "electron-build": "npm run build && electron-builder ${EB_ARGS:-}",
    "electron-pack-mac-universal": "EB_ARGS='--mac dmg --universal --publish=never' npm run electron-build",
    "electron-pack-mac-arm64": "EB_ARGS='--mac dmg --arm64 --publish=never' npm run electron-build",
    "electron-pack-win": "EB_ARGS='--win nsis --publish=never' npm run electron-build",
    "electron-pack-linux": "EB_ARGS='--linux AppImage --publish=never' npm run electron-build",
    "electron-pack-all": "npm run electron-pack-mac-universal && npm run electron-pack-mac-arm64 && npm run electron-pack-win && npm run electron-pack-linux",
    "electron-pack-mas": "MAS=1 npm run build && electron-builder --mac mas --publish=never",
    "electron-pack-mas-arm64": "MAS=1 npm run build && electron-builder --mac mas --arm64 --publish=never"
  },
  "devDependencies": {
    "@types/webmidi": "^2.1.0",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "http-server": "^14.1.1",
    "typescript": "^5.3.3",
    "vite": "^7.0.6",
    "wait-on": "^8.0.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.50.1"
  },
  "keywords": [
    "midi",
    "controller",
    "keyboard",
    "music",
    "qwerty",
    "daw",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/kb2midi.git"
  },
  "build": {
    "appId": "com.kb2midi.app",
    "productName": "kb2midi",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true,
      "signIgnore": [
        "/Contents/Frameworks/Electron Framework.framework/Versions/A/Resources/*.lproj/locale.pak"
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mas": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.plist",
      "provisioningProfile": "build/embedded.provisionprofile",
      "type": "distribution",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "bundleVersion": "${version}",
      "target": [
        {
          "target": "mas",
          "arch": [
            "universal"
          ]
        }
      ]
    }
  }
}
